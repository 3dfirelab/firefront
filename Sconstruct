VariantDir('build', 'src', duplicate=0)
env = Environment(CCFLAGS=['-Wall','-O3'])

files = Glob('./build/*.cpp')
env.Program('./bin/CommandShell', files, LIBS=['netcdf_c++', 'netcdf'])

env.Program('./bin/forefire', files, LIBS=['netcdf_c++', 'netcdf'])